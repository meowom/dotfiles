layout {
    tab name="Notes" {
        pane borderless=false {
            command "nvim"
            args "Todo.md"
            cwd "~/projects/xvx/notes"
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }

    }
}
keybinds {
    shared {
        bind "Alt 1" { Run "lazygit"; }
        bind "Alt 2" { Run "git" "diff"; }
        bind "Alt 3" { Run "exa" "--color" "always"; }
    }
}
